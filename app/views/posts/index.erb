<h1>Posts</h1>

<%= link_to 'New Post', new_post_path, class: "btn btn-primary" %>

<table class="table">
  <thead>
  <tr>
    <th>id</th>
    <th>title</th>
    <th>created_at</th>
    <th>updated_at</th>
    <th>actions</th>
  </tr>
  </thead>
  <tbody>
  <% @posts.reverse.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.title %></td>
        <td><%= post.created_at %></td>
        <td><%= post.updated_at %></td>
        <td>
          <%= link_to "show", post, class: "btn btn-sm btn-success" %>
          <%= link_to "edit", edit_post_path(post), class: "btn btn-sm btn-info" %>
          <%= link_to "delete", post, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-danger"  %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>